@import "styles/variables"

body
    font: 12px Montserrat, sans-serif 
    background blue
    box-sizing: border-box
    display flex
    flex-direction: column
header
    height 10rem
    font 2rem Montserrat, sans-serif 
    display flex
    align-items: center
    justify-content: center
    background darkgrey
.navbar-header
    list-style-type: none
    margin 0
    padding 0
    overflow hidden
    background-color lightgrey
    width: 100%
    display flex
    justify-content flex-end
li a
    font-size 2rem
    display block
    text-decoration: none
    font 4rem
    margin-right: 2rem
    color blue
    &:hover
        background-color: red
        color #000
.picker
    height 200px
    width 200px
    background-color: red
    align-content: center
    border 4px solid green
    margin auto
    padding auto
    display flex
    flex-direction column
    align-items: center
    justify-content: center
    input
        width 100%
        display block
        font-size 1rem
        border 1px solid #cccccc    
    select
        width 100%
        display block
        margin 50px
        padding 5px 35px
        font-size 1rem
        border 1px solid #cccccc
        height 1.24rem
    option
        text-align center
    button
        width 100%
        font-size 1.25 rem
        font-family inherit 
        border 0
        background-color lightgrey
        &:hover
            background-color darkgrey
