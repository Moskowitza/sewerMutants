@import 'styl/*'

body
    background blue
    color red
    border solid 1px @color
    main
        margin-top abs(-10px)
        background rgba(blue,0.9)
        color @color
        transition(all 0.2s, ease)
        border solid 1px @color
        border-radius 20px;
        padding 5px
        cf()

    aside
        margin-top ceil(4.6px)
        background complement(blue)
        
    img
        margin marg(10px)
        float right 
        border-radius(20%,10%)
    footer
        margin-top add(1rem, 1)